<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/v_img"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:background="@color/gray_500"
        app:layout_constraintBottom_toBottomOf="@id/v_value"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/v_key" />

    <View
        android:id="@+id/v_key"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_14sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:background="@color/gray_500"
        app:layout_constraintStart_toEndOf="@+id/v_img"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/v_value"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:background="@color/gray_500"
        app:layout_constraintStart_toStartOf="@id/v_key"
        app:layout_constraintTop_toBottomOf="@id/v_key" />

    <View
        android:id="@+id/v_separator"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:background="@color/gray_500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/v_key"
        app:layout_constraintTop_toBottomOf="@+id/v_value" />
</androidx.constraintlayout.widget.ConstraintLayout>
